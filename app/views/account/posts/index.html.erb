<div class="span12">
  <table class="table">
    <thead>
      <tr>
        <td> Content </td>
        <td> Group name </td>
        <td> Last Update </td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= render_post_content(post) %></td>
          <td><%= post.group.title %></td>
          <td><%= post.updated_at.to_s(:long) %></td>
          <td>
            <%= link_to("Edit", edit_group_post_path(post.group, post), class: "btn btn-mini") %>
            <%= link_to("Delete", group_post_path(post.group, post), class: "btn btn-mini", method: :delete, data: { confirm: "Are you sure?" }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>